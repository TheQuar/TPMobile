<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           android:padding="20dp">

            <ImageView
               android:id="@+id/userAvatar"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/user_avatar"
               android:layout_gravity="center"
               android:layout_marginBottom="30dp"
               android:layout_marginTop="20dp"/>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:padding="5dp"
               android:textColorHint="@color/colorbtn">
               <EditText
                    android:id="@+id/FirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Ism" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:padding="5dp"
               android:textColorHint="@color/colorbtn">
               <EditText
                    android:id="@+id/LastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Familya" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:padding="5dp"
               android:textColorHint="@color/colorbtn">
                <EditText
                    android:id="@+id/FatherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Otangizni ismi" />
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:padding="5dp"
               android:textColorHint="@color/colorbtn">
                <com.santalu.maskedittext.MaskEditText
                    android:id="@+id/Brithday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="Tug'ulgan kun"
                    app:met_mask="##-##-####"
                    android:drawableRight="@drawable/date_range"/>
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:padding="5dp"
               android:textColorHint="@color/colorbtn">
               <com.santalu.maskedittext.MaskEditText
                   android:id="@+id/PhoneNumber"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="phone"
                   android:hint="Tell"
                   app:met_mask="+998(9#) ###-##-##"/>
           </com.google.android.material.textfield.TextInputLayout>


           <Button
               android:id="@+id/regButton"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="50dp"
               android:text="Ro'yxatdan o'tish"
               android:background="@drawable/btn_round"
               android:textColor="@android:color/white"/>

       </LinearLayout>

    </ScrollView>


</LinearLayout>