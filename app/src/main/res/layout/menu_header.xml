    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorbtn"
    android:padding="20dp">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/user_av_circl"/>
